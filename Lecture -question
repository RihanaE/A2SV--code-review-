numbers=list(map(int,input().split()))
duration_of_lecture=numbers[0]
minutes_to_be_awake=numbers[1]
theorems_number=list(map(int, input().split()))
behavior=list(map(int,input().split()))

pointer=0
left_pointer=0
output=0
result=0
time=minutes_to_be_awake


for i in range(duration_of_lecture):
    if behavior[i] != 0:
        result +=theorems_number[i]

while pointer < duration_of_lecture:
    if behavior[pointer] == 0 and minutes_to_be_awake > 0:
        result += theorems_number[pointer]
        pointer +=1
        output=max(output,result)
        minutes_to_be_awake -=1

    elif behavior[pointer] == 1 and minutes_to_be_awake > 0:
        output=max(result,output)
        pointer +=1
        minutes_to_be_awake -=1

    if minutes_to_be_awake == 0:
        if behavior[left_pointer] == 0:
            result -=theorems_number[left_pointer]

        left_pointer += 1
        minutes_to_be_awake +=1

print(output)
